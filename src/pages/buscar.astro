---
import Layout from '../layouts/Layout.astro'
import { Header } from '../components/header'
import { 
  laptops, 
  audifonos, 
  televisores, 
  Sillas,
  flashDeals,
  patriasOffers,
  products,
  recommendedProducts
} from '../constants/db_product'

const url = new URL(Astro.request.url)
const searchQuery = url.searchParams.get('q') || ''

const allProducts = [
  ...laptops,
  ...audifonos, 
  ...televisores,
  ...Sillas,
  ...flashDeals,
  ...patriasOffers,
  ...products,
  ...recommendedProducts
]
export const prerender = false

let searchResults: any[] = []
if (searchQuery && searchQuery.trim() !== '') {
  const term = searchQuery.toLowerCase().trim()
  searchResults = allProducts.filter((product: any) => {
    if (!product || !product.name) return false
    const nameMatch = product.name.toLowerCase().includes(term)
    const brandMatch = product.brand?.toLowerCase().includes(term) || false
    return nameMatch || brandMatch
  })
}
---

<Layout title={`Buscar: ${searchQuery} - CODARI`}>
  <Header client:load />
  <main class="container mx-auto px-4 py-8">
    <div class="mb-6">
      <h1 class="text-3xl font-bold mb-2">
        {searchQuery ? `Resultados para: "${searchQuery}"` : 'Buscador de productos'}
      </h1>
      <p class="text-gray-500">
        Buscando en {allProducts.length} productos disponibles
      </p>
    </div>

    {!searchQuery || searchQuery.trim() === '' ? (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">ğŸ”</div>
        <p class="text-gray-500 text-lg mb-4">Escribe algo para buscar</p>
        <p class="text-gray-400 mb-6">Haz click en estos enlaces de prueba:</p>
        <div class="flex flex-wrap justify-center gap-3">
          <a href="/buscar?q=laptop" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors">ğŸ” Buscar "laptop"</a>
          <a href="/buscar?q=asus" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition-colors">ğŸ” Buscar "asus"</a>
          <a href="/buscar?q=samsung" class="bg-purple-500 text-white px-4 py-2 rounded hover:bg-purple-600 transition-colors">ğŸ” Buscar "samsung"</a>
          <a href="/buscar?q=hp" class="bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition-colors">ğŸ” Buscar "hp"</a>
        </div>
      </div>
    ) : searchResults.length === 0 ? (
      <div class="text-center py-12">
        <div class="text-6xl mb-4">ğŸ˜•</div>
        <p class="text-gray-500 text-lg mb-2">No se encontraron productos para "{searchQuery}"</p>
        <div class="flex justify-center gap-3 mt-6">
          <a href="/buscar?q=laptop" class="bg-blue-500 text-white px-4 py-2 rounded">Probar "laptop"</a>
          <a href="/buscar?q=asus" class="bg-green-500 text-white px-4 py-2 rounded">Probar "asus"</a>
        </div>
      </div>
    ) : (
      <div>
        <div class="mb-6 p-4 bg-green-100 rounded border">
          <p class="text-green-800 font-bold">
            ğŸ‰ Â¡Encontrados {searchResults.length} producto{searchResults.length !== 1 ? 's' : ''}!
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {searchResults.map((product: any) => (
            <div class="border rounded-lg p-4 shadow hover:shadow-lg transition-shadow bg-white">
              <img
                src={product.image || '/placeholder.jpg'}
                alt={product.name}
                class="w-full h-48 object-contain bg-white rounded mb-3"
              />
              <h3 class="font-bold text-lg mb-2 line-clamp-2">{product.name}</h3>
              <div class="flex items-center gap-2 mb-2">
                <span class="text-blue-600 font-bold text-xl">{product.price}</span>
                {product.originalPrice && (
                  <span class="text-gray-400 line-through">{product.originalPrice}</span>
                )}
              </div>
              <p class="text-gray-600 mb-2"><strong>Marca:</strong> {product.brand}</p>
              {product.rating && (
                <div class="flex items-center gap-1 mb-2">
                  <span class="text-yellow-500">{'â˜…'.repeat(product.rating)}</span>
                  <span class="text-gray-500">({product.reviews || 0} reviews)</span>
                </div>
              )}
              {product.freeShipping && (
                <p class="text-green-600 font-medium">ğŸšš EnvÃ­o gratis</p>
              )}
            </div>
          ))}
        </div>
      </div>
    )}
  </main>
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>