---
import { Header } from '@/components/header'
import Footer from '@/components/footer.astro'
import Layout from '@/layouts/Layout.astro'
---

<Layout>
	<div class="min-h-screen bg-white">
		<Header client:load />
		<div class="text-center py-20">
			<h1 class="text-4xl font-bold">404 - Página no encontrada</h1>
			<p class="mt-4 text-gray-500">No pudimos encontrar lo que estás buscando.</p>
			<a href="/" class="mt-6 inline-block bg-orange-600 text-white px-4 py-2 rounded">Volver al inicio</a>
		</div>
		<Footer />
	</div>
</Layout>
